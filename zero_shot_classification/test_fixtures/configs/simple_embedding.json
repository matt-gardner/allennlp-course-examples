{
  "dataset_reader": {
    "type": "zero_shot_classification",
    "label_file": "test_fixtures/topic_classes.txt"
  },
  "train_data_path": "test_fixtures/topic_dev.txt",
  "validation_data_path": "test_fixtures/topic_dev.txt",
  "model": {
    "type": "simple_embedding_zero_shot_classifier",
    "embedder": {
      "token_embedders": {
        "tokens": {
            "type": "embedding",
            "embedding_dim": 3
        }
      }
    },
    "encoder": {
      "type": "bag_of_embeddings",
      "embedding_dim": 3
    }
  },
  "data_loader": {
